{
    "name": "blomstra/post-by-mail",
    "description": "Start discussions and reply to discussions via email ",
    "keywords": [
        "flarum"
    ],
    "homepage": "https://blomstra.net",
    "support": {
        "source": "https://github.com/blomstra/flarum-ext-post-by-mail",
        "issues": "https://github.com/blomstra/flarum-ext-post-by-mail/issues",
        "email": "helpdesk@blomstra.net"
    },
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "flarum/core": "^1.2.0",
        "mailgun/mailgun-php": "^3.5",
        "symfony/http-client": "^6.0",
        "nyholm/psr7": "^1.5",
        "flarum/tags": "*"
    },
    "authors": [
        {
            "name": "Team Blomstra",
            "email": "development@blomstra.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Blomstra\\PostByMail\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Post By Mail",
            "category": "feature",
            "icon": {
                "name": "fas fa-mail-bulk",
                "backgroundColor": "#EBF1FD",
                "color": "#3a98d0"
            }
        }
    }
}
